<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="title-container">
        <h1>Postal Service Package Manager</h1>
        <hr>
    </div>
    
    <div class="container">        
        <div class="action-container">
            <h2><%= title %></h2>

            <a class="button" href="/create">+ Add New Package</a>
        </div>
        
        <ul class="custom-table">
            <li class="table-header">
                <div class="col col-1">Sender</div>
                <div class="col col-2">Receiver</div>
                <div class="col col-3">Shipping Method</div>
                <div class="col col-4">Package Status</div>
                <div class="col col-5">Tracking #</div>
                <div class="col col-6"></div>
            </li>

            <% packages.forEach((item) => { %>
            <li class="table-row">
                <div class="col col-1"><%= item.SenderName %></div>
                <div class="col col-2"><%= item.ReceiverName %></div>
                <div class="col col-3"><%= item.ShippingMethod %></div>
                <div class="col col-4"><%= item.Status %></div>
                <div class="col col-5"><%= item.TrackingNumber %></div>
                <div class="col col-6">
                    <a class="button" href="/view/<%= item.ID %>">View</a>       
                    
                    <a class="button" href="/edit/<%= item.ID %>">Edit</a>                         
                </div>
            </li>     
            <% }); %>       
        </ul>

        <% if (packages.length == 0) { %>
                <p>No Packages Found</p>
        <% } %>      
    </div>

  </body>
</html>

